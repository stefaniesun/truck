@import "base.less";
[v-cloak] {
  display: none;
}

*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

body,html{
  width: 100%;
  height: 100%;
  min-width: 1200px;
  min-height:100%;
  background-color: #fff;
}

body.modal-open {
  overflow: hidden;
}

ul li{
  list-style: none;
  float: left;
}

img{
  vertical-align: middle;
}
.text-center{
  text-align: center !important;
}

.pull-left{
  float:left;
}

.pull-right{
  float: right;
}

.clearfloat:after{
  content:" ";
  height:0px;
  clear:both;
  display:block;
}
.icon {
  width: 1em; height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}
input::-webkit-input-placeholder { /* Mozilla Firefox 4 to 18 */
  color: #ccc;
}
input::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: #ccc;
}
input:-ms-input-placeholder { /* Internet Explorer 10+ */
  color: #ccc;
}
.paging-style {
  li{
    min-width: 30px;
    height: 30px;
    border-radius: 0!important;
    border-color: #e6e6e6;
    margin: 0 2px;
    font-size: 14px;
    a{
      color:#333333;
    }
  }
  .ivu-page-item-active{
    a{
      color:#fff;
    }
  }
  li:nth-of-type(1),li:last-child,.ivu-page-next{
    margin: 0 8px;
    padding: 0 12px;
  }
  .ivu-page-options-elevator input{
    height: 30px;
  }
}
.ivu-dropdown-item{
  width: 100%;
  text-align: center;
  padding: 4px 0;
}
.ivu-date-picker-editor {
  input {
    height: 26px;
  }
  i {
    height: 26px;
    line-height: 26px;
  }
}
.amap-logo {
  right: 0 !important;
  left: auto !important;
  display: none !important;
}

.amap-copyright {
  right: 70px !important;
  left: auto !important;
  display: none !important;
}
.map_tips{
  .amap-simple-marker-label{
    top: -65%;
    right: inherit;
    bottom: inherit;
    margin: inherit;
    word-break: keep-all;
  }
}
.no-content{
  width: 200px;
  height: 250px;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  img{
    width: 200px;
    height: 200px;
    display: block;
  }
  div{
    font-size: 22px;
    color:#b2b2b2;
    margin-top: 15px;
  }
}
.no-select{
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.blank{
  width: 1200px;
  height: 550px;
  background-color: #fff;
  border-radius: 8px;
  margin: 20px auto;
  padding-top: 140px;
  text-align: center;
  position: relative;
}
