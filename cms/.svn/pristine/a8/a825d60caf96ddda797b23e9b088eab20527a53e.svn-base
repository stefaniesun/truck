<script>
  import Mheader from "@/components/header.vue";
  import Mfooter from "@/components/footer.vue";
  let vm;
  export default {
    name:'placeOrder',
    components:{
      Mheader,
      Mfooter,
    },
    data(){
      return{
        content:[],
        cabContent:[],
        linkMan: '',
        linkPhone: '',
      }
    },
    mounted:function(){
      vm = this;
      vm.getData();
    },
    methods:{
      reduceNum:function(obj){
        if (obj.roomNum > 1) {
          obj.roomNum -= 1;
          vm.content.total -= 1;
          obj.realCount++;
          vm.content.totalPrice = vm.content.totalPrice - obj.price;
        }else {
            vm.dialog.showDialog('每个舱型最少保留数量为1！');
        }
      },
      addNum: function (obj) {
        if(!obj.maxCount){
          if(obj.realCount > 0){
            obj.roomNum += 1;
            vm.content.total += 1;
            obj.realCount--;
            vm.content.totalPrice = vm.content.totalPrice + obj.price;
          }
        }else {
          if(obj.roomNum < obj.maxCount){
            if(obj.realCount > 0){
              obj.roomNum += 1;
              vm.content.total += 1;
              obj.realCount--;
              vm.content.totalPrice = vm.content.totalPrice + obj.price;
            }
          }
        }
      },
      deleteJson:function (i,obj) {
        if (vm.cabContent.length > 1) {
        	vm.dialog.showDialog({
            close: true,
            btnText: '确定',
            msg: '确定要删除该舱型吗？'
          },function (flag) {
            if( flag ){
              vm.cabContent.splice(i, 1);
              vm.content.total -= obj.roomNum;
              vm.content.cabinArr = vm.cabContent;
              vm.content.totalPrice = vm.content.totalPrice - (obj.price * obj.roomNum);
              sessionStorage.ptOrder = JSON.stringify(vm.content);
            }
          })
        } else {
          vm.dialog.showDialog('最少保留一个舱型！');
        }
      },
      confirm:function (obj) {
        obj.status = !obj.status;
        vm.content.cabinArr = vm.cabContent;
        sessionStorage.ptOrder = JSON.stringify(vm.content);
      },
      getData:function () {
        vm.content=[];
        vm.cabContent = [];
        if(sessionStorage.ptOrder){
          let content = JSON.parse(sessionStorage.ptOrder);
          vm.content = content;
          for(let i=0; i<content.cabinArr.length; i++){
              let json = content.cabinArr[i];
              vm.$set(json,'status',true);
              vm.cabContent.push(json);
          }
        }else {
          vm.$router.replace('/');
        }
      },
      goOrderSuccess:function () {
        let tel = /^1[34578][0-9]{9}$/;
        if( !vm.linkMan ){
          vm.dialog.showDialog('请填写统一联系人姓名');
          return;
        }
        if( !vm.linkPhone || !(tel.test(vm.linkPhone)) ){
          vm.dialog.showDialog('请正确填写统一联系人手机号');
          return;
        }
        let orderJson = new Array;
        let cabinArr = vm.content.cabinArr;
      	let cruiseVoyage;
        let cabinType = new Array;
      	for(let i=0;i<cabinArr.length;i++){
//      		if(!cabinArr[i].status){
//            vm.dialog.showDialog('请先确定第'+ (i+1) +'个舱型');
//            return
//          }
          cruiseVoyage = cabinArr[0].cruiseVoyage;
      		let orderObj = new Object;
          orderObj.cabin = cabinArr[i].numberCode;
          orderObj.count = cabinArr[i].roomNum;
          orderObj.stock = cabinArr[i].stock;
          orderJson.push(orderObj);
          if( cabinArr[i].stockType ){
            cabinType.push(cabinArr[i].cabinType)
          }
        }
        if(cabinType.length){
          let msg = cabinType.length > 1 ? cabinType.join('、') : cabinType[0];
          vm.dialog.showDialog({
            close: true,
            btnText: '确定',
            msg: '【' + msg + '】的资源紧张，本次下单不进行支付，需后台资源确认后在订单管理中进行二次付款操作，给您带来的不便敬请谅解。'
          }, function (flag) {
            if(flag){
              vm.upData(cruiseVoyage,orderJson);
            }
          })
        }else {
          vm.upData(cruiseVoyage,orderJson);
        }
      },
      upData(cruiseVoyage,orderJson){
        let parame = {
          voyage: cruiseVoyage,
          orderJson: JSON.stringify(orderJson),
          linkMan: vm.linkMan,
          linkPhone: vm.linkPhone,
        };
        vm.axios.post(this.api+this.urlApi.createCruiseOrderOper,parame).then(function (response) {
          if(response.status) vm.$router.push('/orderSuccess');
        })
      },
      goBack(){
        vm.$router.goBack();
      }
    }
  }
</script>
